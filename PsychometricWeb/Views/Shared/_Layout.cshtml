
@{ 
    var isLogin = Context.Request.Path.Value.Contains("/Login");
    var isuLogin = Context.Request.Path.Value.Contains("/PsychoInsert");
    var isview = Context.Request.Path.Value.Contains("/ViewPsycho");
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Psychometric Tool</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PsychometricWeb.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <link href="~/css/AutoComplete.css" rel="stylesheet" />
    <style>
        
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container-fluid d-flex justify-content-between align-items-center">
            <a href="#" class="navbar-brand">
                <img src="~/assets/dist/img/CSM.png" alt="AdminLTE Logo" class="brand-image img-circle elevation-1 bg-light" style="opacity: 0.9; width: 50px; height: 50px;" />
            </a>
            <div @*class="text-center"*@ style="font-size: 1.5rem; font-weight: bold; flex-grow: 1;">Psychometric Tool</div>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse g-nav_menu-right text-end" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    @if (!isLogin && !isuLogin && !isview)
                    {
                        <li class="nav-item">
                            <a class="nav-link text-primary" href='@Url.Action("UserRegistration", "Home")'>New user?</a>
                        </li>
                        <li class="nav-item">
                            <a class="btn btn-outline-primary btn- nav-link" href='@Url.Action("Login", "Psycho")'>Login</a>
                        </li>
                    }
                    @if (isview)
                    {
                        <li class="nav-item">
                            <a class="btn btn-primary btn-sm nav-link" href='@Url.Action("Start", "Psycho")'>Log Out</a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - Psychometric Tool
        </div>
    </footer>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/AutoComplete.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
